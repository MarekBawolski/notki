{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <form method="post" action="/ideas/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <a class="btn btn-outline-dark float-right" href="/ideas/edit/{{id}}">Edytuj</a>
      <input type="submit" class="btn btn-outline-danger float-right mr-2" value="Usun">
      
    </form>
  </div>
{{else}}
  <div class="card card-body mb-2 bg-info">Brak notatek.</div>
{{/each}}